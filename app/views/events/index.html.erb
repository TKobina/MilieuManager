<h1>Events</h1>
<% if @owner%>
  <strong><%= link_to "Add Event", new_event_path(current_milieu: @milieu) %></strong>
<% end %>
</p>

<div id="Events">
  <ul>
  <% @events.each do |event| %>
    <div>
      <% kinds = event.kind.split(",") %>
      <li><%= event.ydate.to_s %>: <%= link_to event.name, event_path(event.id, current_milieu: @milieu) %><sup>(<%=event.id %>)</sup> 
      - 
      <%=kinds[..3].join(", ")%><%= "..." if kinds.length > 3%> <br></li>
    </div>
  <% end %>
  </ul>
</div>
