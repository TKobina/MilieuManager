<h1><%= @event.ydate.to_s %>: <%= @event.name %>
<% if @owner%>
  </h1>
  <%= link_to "Edit", edit_event_path(@event.id, current_milieu: @milieu), data: { controller: "tooltip", tooltip_content_value: "A helpful tip for the link" }%>
<% else %>
</h1>
<% end %>
</p>

<% if @owner %>
<div><ul>
  <% if @event.public %>
    <h3> Public</h3>
  <% else %>
    <h3> Private </h3>
  <% end %>
</div>
</br>


<div>
<h3>Event Code</h3>
  <%= @event.code.first %>
</div>
<br>
<div><ul>
<h3>Event Specifications</h3>
  <%= simple_format(@instructions.html_safe) %>
<% end %>
</div></ul>



<p>
<h3>Details</h3>
<%= simple_format(@event.text["pub"]) %>
</p>

<p>
<% if @private %>
<h3>Private Details</h3>
<%= simple_format(@event.text["pri"]) %>
<% end %>
</p>
